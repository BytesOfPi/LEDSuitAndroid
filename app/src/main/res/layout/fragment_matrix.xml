<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.MatrixFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/lblTimerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start"
        app:layout_constraintStart_toEndOf="@+id/spinnerMinutes"
        app:layout_constraintTop_toBottomOf="@+id/btnTimerSend" />

    <ImageButton
        android:id="@+id/btnTimerStart"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginStart="16dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:layout_constraintStart_toEndOf="@+id/lblTimerStart"
        app:layout_constraintTop_toTopOf="@+id/lblTimerStart" />

    <ImageButton
        android:id="@+id/btnScrollStart"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:layout_constraintStart_toEndOf="@+id/btnScrollSend"
        app:layout_constraintTop_toBottomOf="@+id/lblScrollStart" />

    <ImageButton
        android:id="@+id/btnScrollStop"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/presence_offline"
        app:layout_constraintStart_toEndOf="@+id/btnScrollStart"
        app:layout_constraintTop_toBottomOf="@+id/lblScrollStop" />

    <TextView
        android:id="@+id/lblScrollMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Scroll Message"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSec" />

    <ImageButton
        android:id="@+id/btnTimerSend"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_send"
        app:layout_constraintStart_toEndOf="@+id/spinnerMinutes"
        app:layout_constraintTop_toBottomOf="@+id/lblTimerSend" />

    <ImageButton
        android:id="@+id/btnTimerStop"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/presence_offline"
        app:layout_constraintStart_toEndOf="@+id/btnTimerPause"
        app:layout_constraintTop_toBottomOf="@+id/lblTimerStop" />

    <ImageButton
        android:id="@+id/btnTimerPause"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_media_pause"
        app:layout_constraintStart_toEndOf="@+id/btnTimerSend"
        app:layout_constraintTop_toBottomOf="@+id/lblTimerPause" />

    <ImageButton
        android:id="@+id/btnScrollSend"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_send"
        app:layout_constraintStart_toEndOf="@+id/tvScrollMsg"
        app:layout_constraintTop_toBottomOf="@+id/lblScrollMsg" />

    <EditText
        android:id="@+id/tvScrollMsg"
        android:layout_width="162dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblScrollMsg" />

    <TextView
        android:id="@+id/lblSetTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Set Timer"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTimerSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@+id/lblSetTimer"
        app:layout_constraintStart_toEndOf="@+id/spinnerMinutes" />

    <TextView
        android:id="@+id/lblTimerPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="@+id/lblTimerSend"
        app:layout_constraintStart_toEndOf="@+id/btnTimerSend" />

    <TextView
        android:id="@+id/lblTimerStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="@+id/lblTimerPause"
        app:layout_constraintStart_toEndOf="@+id/btnTimerPause" />

    <TextView
        android:id="@+id/lblSendScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@+id/lblScrollMsg"
        app:layout_constraintStart_toEndOf="@+id/tvScrollMsg" />

    <TextView
        android:id="@+id/lblScrollStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="@+id/lblScrollStart"
        app:layout_constraintStart_toEndOf="@+id/btnScrollStart" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Seconds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSetTimer" />

    <Spinner
        android:id="@+id/spinnerMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/lblSetTimer" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Minutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMinutes" />

    <Spinner
        android:id="@+id/spinnerSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMinutes" />

    <TextView
        android:id="@+id/lblScrollStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/lblSendScroll"
        app:layout_constraintStart_toEndOf="@+id/btnScrollSend" />

</androidx.constraintlayout.widget.ConstraintLayout>